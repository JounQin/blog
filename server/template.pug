doctype html
html(lang="{{ locale }}")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no")
    title {{ title }}
    | {{{ renderResourceHints() }}}
    | {{{ renderStyles() }}}
    base(target="_blank")
    style.
      #skip a {
         position: absolute;
         left: -10000px;
         top: auto;
         width: 1px;
         height:1 px;
         overflow: hidden;
      }
      #skip a:focus {
         position:static;
         width:auto;
         height:auto;
       }
  body
    #skip
      a(href="#app") skip to content
    //vue-ssr-outlet
    | {{{ script }}}
    if !__DEV__
      script(src="https://cdn.polyfill.io/v2/polyfill.min.js")
    | {{{ renderScripts() }}}
