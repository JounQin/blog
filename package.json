  "browserslist": [
    "extends @1stg/browserslist-config/modern",
    "not Android <=4.4",
    "not Edge <=14",
    "not OperaMini all",
    "not OperaMobile <=46",
    "not UCAndroid <=12.12",
    "not QQAndroid <=1.2"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintIgnore": [
    "dist",
    "src/types/schema.ts"
  ],
  "nodemonConfig": {
    "ext": "ts",
    "watch": [
      ".dev.env",
      "server/router"
    ]
  },
  "prettier": "@1stg/prettier-config/vue",
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-config"
    ]
  },
  "stylelint": {
    "extends": "@1stg/stylelint-config/scss",
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  }
}
