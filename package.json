    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.0.10",
    "prettier": "^1.10.2",
