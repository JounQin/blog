{
  "name": "blog",
  "version": "0.0.1",
  "description": "a Blog system built on GitHub API with Vue SSR",
  "repository": "git@github.com:JounQin/blog.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "server": "ts-node -r tsconfig-paths/register server",
    "server:core": "env-cmd .prod.env env-cmd .dev.env yarn server",
    "server:router": "ts-node -r tsconfig-paths/register server/router/dev",
    "watch": "nodemon --exec \"env-cmd .prod.env env-cmd .dev.env yarn server:router\"",
    "dev": "run-p server:core watch",
    "start": "env-cmd .dev.env env-cmd .prod.env node dist/server",
    "build:vue:client": "env-cmd .dev.env env-cmd .prod.env webpack --config build/vue-client.ts --colors --progress -p",
    "build:vue:server": "env-cmd .dev.env env-cmd .prod.env webpack --config build/vue-server.ts --colors --progress -p",
    "build:server": "env-cmd .dev.env env-cmd .prod.env webpack --config build/server.ts --colors --progress -p",
    "build:template": "mkdir -p dist/static && ts-node build/template",
    "build": "rimraf dist && run-p build:vue:client build:vue:server build:server build:template",
    "sync:pull": "bash build/sync-pull.sh",
    "sync:push": "bash build/sync-push.sh",
    "lint": "tslint -p . -t stylish",
    "pm2": "yarn sync:pull && pm2 start --name=blog npm -- start",
    "prune": "yarn install --production --ignore-optional --ignore-scripts --prefer-offline --force"
  },
  "browserslist": [
    "> 1% in CN"
  ],
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAll": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{gql,json,md,vue}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint -p . -t stylish --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ext": "ts",
    "watch": [
      ".env",
      ".dev.env",
      "server/router"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "accept-language": "^3.0.18",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.4.8",
    "apollo-link-http": "^1.5.9",
    "axios": "^0.18.1",
    "date-fns": "^2.0.0-alpha.27",
