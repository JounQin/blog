    "sw-precache-webpack-plugin": "^0.11.4",
    "ts-loader": "^3.2.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2",
    "url-loader": "^0.6.2",
