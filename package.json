{
  "name": "@1stg/blog",
  "version": "0.0.0",
  "description": "a Blog system built on GitHub GraphQL API with Vue SSR",
  "repository": "git@github.com:JounQin/blog.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "rimraf dist && mkdirp dist/static && cross-env NODE_ENV=production env-cmd run-p 'build:**'",
    "build:server": "webpack --config build/server.ts --color --progress",
    "build:template": "ts-node build/template",
    "build:vue:client": "webpack --config build/vue-client.ts --color --progress",
    "build:vue:server": "webpack --config build/vue-server.ts --color --progress",
    "dev": "env-cmd run-p server watch",
    "lint": "run-p 'lint:*'",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache -f friendly",
    "lint:style": "stylelint --cache 'src/**/*.{scss,vue}'",
    "lint:tsc": "tsc --noEmit",
    "prepare": "cpy env.js . --rename=.env.js && simple-git-hooks",
    "server": "ts-node -T -r tsconfig-paths/register server",
    "server:router": "ts-node -T -r tsconfig-paths/register server/router/dev",
    "start": "env-cmd node dist/server",
    "typecov": "type-coverage",
    "watch": "nodemon"
  },
  "dependencies": {
    "accept-language": "^3.0.18",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "axios": "^0.27.2",
    "date-fns": "^2.30.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "github-markdown-css": "^5.4.0",
    "google-translate-api": "^2.3.0",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "invert-color": "^2.0.0",
    "koa": "^2.14.2",
    "koa-better-http-proxy": "^0.2.10",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.1.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "koa-session": "^6.4.0",
    "koa-static-cache": "^5.1.4",
    "lodash": "^4.17.21",
    "lru-cache": "^10.0.2",
    "memory-fs": "^0.5.0",
    "node-fetch": "^2.7.0",
    "qs": "^6.11.2",
    "serialize-javascript": "^6.0.1",
    "uuid": "^9.0.1",
    "vue": "^2.7.15",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.6.5",
    "vue-server-renderer": "^2.7.15",
    "vue-translator": "^0.9.6",
    "vuex": "^3.6.2",
    "vuex-class": "^0.3.2"
  },
  "devDependencies": {
    "@1stg/app-config": "^9.0.0",
    "@types/debug": "^4.1.12",
    "@types/html-minifier": "^4",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/koa": "^2.13.11",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-compose": "^3.2.5",
    "@types/koa-compress": "^4.0.6",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-router": "^7.4.7",
    "@types/koa-session": "^6.4.5",
    "@types/koa-static-cache": "^5.1.4",
    "@types/koa-webpack": "^6.0.8",
    "@types/lodash": "^4.17.12",
    "@types/lru-cache": "^7.10.10",
    "@types/memory-fs": "^0.3.7",
    "@types/mini-css-extract-plugin": "^1.2.2",
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.9",
    "@types/prettier": "^2.7.3",
    "@types/pug": "^2.0.9",
    "@types/qs": "^6.9.10",
    "@types/serialize-javascript": "^5.0.4",
    "@types/uuid": "^9.0.7",
    "@types/webpack": "^4.41.26",
    "@types/webpack-env": "^1.18.4",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^3.0.4",
    "@types/workbox-webpack-plugin": "^6.0.0",
    "bootstrap": "^5.3.2",
    "commitlint": "^18.4.2",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.7",
    "eslint": "^8.53.0",
    "file-loader": "^6.2.0",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^6.5.2",
    "glob": "^10.3.10",
    "google-fonts-webpack-plugin": "^0.4.4",
    "html-loader": "^1.3.2",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^4.5.2",
    "koa-webpack": "^6.0.0",
    "lint-staged": "^13.3.0",
    "lodash-es": "^4.17.21",
    "mini-css-extract-plugin": "^1.6.2",
    "mkdirp": "^3.0.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.2.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.8.8",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "purgecss-webpack-plugin": "^4.1.3",
    "purgecss-whitelister": "^2.4.0",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^10.4.1",
    "simple-git-hooks": "^2.9.0",
    "style-resources-loader": "^1.5.0",
    "stylelint": "^15.11.0",
    "ts-loader": "^8.4.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "type-coverage": "^2.27.0",
    "typeface-lato": "^1.1.13",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.11.1",
    "vue-template-compiler": "^2.7.15",
    "webpack": "^4.47.0",
    "webpack-cli": "^4.0.0-rc.1",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^3.0.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "resolutions": {
    "prettier": "^2.8.8",
    "terser-webpack-plugin": "^4.2.3",
    "webpack": "^4.47.0"
  },
  "browserslist": [
    "extends @1stg/browserslist-config/modern"
  ],
  "commitlint": {
    "extends": [
      "@1stg"
    ]
  },
  "nodemonConfig": {
    "exec": "yarn server:router",
    "ext": "ts",
    "watch": [
      ".env.local",
      "server/router"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "@1stg/remark-preset"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "stylelint": {
    "extends": [
      "@1stg/stylelint-config",
      "@1stg/stylelint-config/scss",
      "@1stg/stylelint-config/modules"
    ],
    "rules": {
      "import-notation": "string"
    },
    "overrides": [
      {
        "files": [
          "*.scss",
          "*.vue"
        ],
        "rules": {
          "scss/at-import-no-partial-leading-underscore": null,
          "scss/load-no-partial-leading-underscore": true
        }
      },
      {
        "files": [
          "*.vue"
        ],
        "customSyntax": "postcss-html"
      }
    ]
  },
  "typeCoverage": {
    "atLeast": 98.99,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreFiles": [
      "src/types/schema.ts",
      "*.d.ts"
    ],
    "ignoreNested": true,
    "showRelativePath": true,
    "skipCatch": true,
    "strict": true,
    "update": true
  }
}
