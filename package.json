{
  "name": "blog",
  "version": "0.0.1",
  "description": "Blog system built on GitHub API with Vue SSR",
  "repository": "git@github.com:JounQin/blog.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "server": "ts-node -r tsconfig-paths/register -P tsconfig.server.json server",
    "server:core": "env-cmd .env env-cmd --fallback .env.local npm run server",
    "server:router": "ts-node -r tsconfig-paths/register -P tsconfig.server.json server/router/dev",
    "watch": "nodemon --exec \"env-cmd .env env-cmd --fallback .env.local npm run server:router\"",
    "dev": "run-p server:core watch",
    "start": "env-cmd --fallback .env.local env-cmd .env node dist/server",
    "build:vue:client": "env-cmd --fallback .env.local env-cmd .env webpack --config build/client.ts --colors --progress -p",
    "build:vue:server": "env-cmd --fallback .env.local env-cmd .env webpack --config build/server.ts --colors --progress -p",
    "build:server": "tsc -p tsconfig.server.json --outDir dist",
    "build:template": "mkdir -p dist/static && ts-node build/template",
    "build": "rimraf dist && run-p build:vue:client build:vue:server build:server build:template",
    "sync:pull": "bash build/sync-pull.sh",
    "sync:push": "bash build/sync-push.sh",
    "lint": "tslint -p . -e 'node_modules/**' -t stylish '**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "pm2": "npm run sync:pull && pm2 start --name=blog npm -- start",
    "prune": "yarn install --production --ignore-optional --ignore-scripts --prefer-offline --force"
  },
  "browserslist": ["> 1% in CN"],
  "lint-staged": {
    "*.{gql,json,md,vue}": ["prettier --write", "git add"],
    "*.ts": ["tslint -p . -t stylish --fix", "git add"]
  },
  "nodemonConfig": {
    "ext": "ts",
    "watch": [".env", ".env.local", "server/router"]
  },
  "postcss": {
    "autoprefixer": null
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 150
        }
      }
    ]
  },
  "dependencies": {
    "accept-language": "^3.0.18",
    "apollo-cache-inmemory": "^1.1.5",
    "apollo-client": "^2.2.0",
    "apollo-link-http": "^1.3.2",
    "axios": "^0.17.1",
    "date-fns": "^2.0.0-alpha.7",
    "debug": "^3.1.0",
    "env-cmd": "^7.0.0",
    "github-markdown-css": "^2.10.0",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "invert-color": "^1.2.2",
    "koa": "^2.4.1",
    "koa-better-http-proxy": "^0.2.4",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^2.0.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.7.1",
    "koa-static-cache": "^5.1.1",
    "lodash": "^4.17.4",
    "lodash-es": "^4.17.4",
    "lru-cache": "^4.1.1",
    "node-fetch": "^1.7.3",
    "uuid": "^3.1.0",
    "vue": "^2.5.13",
    "vue-class-component": "^6.1.2",
    "vue-property-decorator": "^6.0.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vue-translator": "^0.6.0",
    "vuex": "^3.0.1",
    "vuex-class": "^0.3.0"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/graphql": "^0.11.8",
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/koa": "^2.0.43",
    "@types/koa-bodyparser": "^3.0.26",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa-session": "^3.0.6",
    "@types/koa-webpack": "^1.0.0",
    "@types/lodash": "^4.14.92",
    "@types/lru-cache": "^4.1.0",
    "@types/node": "^9.3.0",
    "@types/node-fetch": "^1.6.7",
    "@types/pug": "^2.0.4",
    "@types/shelljs": "^0.7.7",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^3.8.2",
    "@types/webpack-merge": "^4.1.1",
    "@types/webpack-node-externals": "^1.6.0",
    "apply-loader": "^2.0.0",
    "bootstrap": "^4.0.0-beta.3",
